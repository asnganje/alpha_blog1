<h1>Log in</h1>

<%= form_with(scope: :session, url: login_path, local: true, data: { turbo: false })  do |u|%>
  <div>
    <%= u.label :email%><br/>
    <%= u.email_field :email, placeholder: "Enter your email"%>
  </div>
  <div>
    <%= u.label :password%><br/>
    <%= u.password_field :password, placeholder: "Enter your password"%>
  </div>
  <p>
    <%= u.submit "Log in"%>
  </p>
<%end%>