<h1 class="text-blue-500 text-2xl">Welcome to articles listing!</h1>
<p>
  <%= link_to 'Our Articles', articles_path, class: "text-blue-500" %> |
  <%= link_to 'About page', about_path, class: "text-blue-500" %>
</p>
<%=link_to 'Bloggers', users_path, class:"text-green-500" %>
<%if logged_in?%>
  <div>
    <p>
      <%= link_to "Logout", logout_path, class: "text-blue-500" %>
    </p>
    <p>
      <%= link_to current_user.username, current_user, class: "text-blue-500" %>
    </p>
    <p>
      <%= link_to "Delete User", user_path(current_user), class: "text-blue-500", data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                  } %>
    </p>
  </div>
<%else%>
  <div class="flex gap-x-10">
    <p>
    <%= link_to "Sign Up", signup_path, class: "text-blue-500" %>
    </p>
    <p>
      <%= link_to "Log in", login_path, class: "text-blue-500" %>
    </p>
  </div>
<%end%>