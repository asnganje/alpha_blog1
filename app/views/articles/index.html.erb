<h1>Listing articles page</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan = "3">Actions</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article|%>
    <tr class="flex gap-x-5">
      <td>
        <%=article.title%>
      </td>
      <td>
        <%=article.description%>
      </td>
      <td>
        <%=link_to 'Show', article_path(article) %>
      </td>
      <td>
        <%=link_to 'Edit', edit_article_path(article) %>
      </td>
      <td>
        <%=link_to 'Delete', article_path(article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
      </td>
      <td class="px-4 text-xl font-mono text-orange-500"><%=article.user.username if article.user%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to "Create new article", new_article_path %>
</p>