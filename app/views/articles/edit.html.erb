<h1>Edit article</h1>
<% if @article.errors.any? %>
  <h1>The following errors occured!</h1>
  <ul>
    <%@article.errors.full_messages.each do |e|%>
      <li><%=e%></li>
      <%end%>
  </ul>
<%end%>
<%# data: { turbo: false } %>
<%= form_with(model: @article,  local: true, data: { turbo: false })  do |f|%>
  <p>
    <%= f.label :title%><br/>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description%><br/>
    <%= f.text_area :description%>
  </p>
  <p>
    <%=f.submit%>
  </p>
<%end%>
<a href="/articles">Back</a>