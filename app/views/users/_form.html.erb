<% if @user.errors.any? %>
  <h1>The following errors occured!</h1>
  <ul>
    <%@user.errors.full_messages.each do |e|%>
      <li><%=e%></li>
      <%end%>
  </ul>
<%end%>
<%= form_with(model: @user,  local: true, data: { turbo: false })  do |u|%>
  <p>
    <%= u.label :username%><br/>
    <%= u.text_field :username%>
  </p>
  <p>
    <%= u.label :email%><br/>
    <%= u.email_field :email%>
  </p>
  <p>
    <%= u.label :password%><br/>
    <%= u.password_field :password%>
  </p>
  <p>
    <%=u.submit(@user.new_record? ? "Sign up" : "Update account")%>
  </p>
<%end%>